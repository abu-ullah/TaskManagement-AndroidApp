<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaskManagementProject.Controllers.SignUpPage"
             NavigationPage.HasNavigationBar="False"
             >
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="txtName" Text="" Placeholder="Name"/>
            <Entry x:Name="txtEmail" Text="" Placeholder="Email"/>
            <Entry x:Name="txtPassword" Text="" IsPassword="True" Placeholder="Password"/>
            <Entry x:Name="txtPasswordRep" Text="" IsPassword="True" Placeholder="Confirm Password"/>
            <Button x:Name="btnCreate" Text="Create" BackgroundColor="OrangeRed" CornerRadius="10" Clicked="btnCreate_Clicked"/>
            <Button x:Name="btnCancel" Text="Cancel" BackgroundColor="OrangeRed" CornerRadius="10" Clicked="btnCancel_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>